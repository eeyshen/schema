{
  "$ref": "#/definitions/TopLevelSpec",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AnyRefresh": {
      "anyOf": [
        {
          "$ref": "#/definitions/Refresh"
        },
        {
          "$ref": "#/definitions/AtRefresh"
        },
        {
          "$ref": "#/definitions/EveryRefresh"
        }
      ]
    },
    "Refresh": {
      "type": "string",
      "enum": ["no", "auto"]
    },
    "AtRefresh": {
      "required": ["timeUnit", "at"],
      "properties": {
        "type": {
          "$ref": "#/definitions/refreshType"
        },
        "at": {
          "type": "string"
        },
        "timeUnit": {
          "$ref": "#/definitions/TimeUnit"
        },
        "key": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "EveryRefresh": {
      "required": ["timeUnit", "every"],
      "properties": {
        "type": {
          "$ref": "#/definitions/refreshType"
        },
        "every": {
          "type": "number"
        },
        "timeUnit": {
          "$ref": "#/definitions/TimeUnit"
        },
        "key": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "TimeUnit": {
      "enum": [
        "year",
        "quarter",
        "month",
        "week",
        "day",
        "hour",
        "minute",
        "second",
        "millisecond"
      ],
      "type": "string"
    },
    "dataValue": {
      "required": ["name", "values"],
      "properties": {
        "name": {
          "type": "string"
        },
        "values": {
          "type": "array"
        }
      },
      "additionalProperties": false
    },
    "dataURL": {
      "required": ["name", "url", "id"],
      "properties": {
        "name": { "type": "string" },
        "url": {
          "type": "string"
        },
        "id": {
          "type": "number"
        },
        "refresh": {
          "$ref": "#/definitions/AnyRefresh"
        }
      },
      "additionalProperties": false
    },
    "refreshType": {
      "enum": ["increase", "difference", "full", "no"],
      "type": "string"
    },
    "TopLevelSpec": {
      "additionalProperties": false,
      "required": ["data", "name", "pageSize", "chartPosition", "chartSize"],
      "properties": {
        "id": {
          "type": "integer",
          "default": 0,
          "examples": [0]
        },
        "author": {
          "type": "string",
          "default": "",
          "examples": [""]
        },
        "data": {
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/dataValue"
              },
              {
                "$ref": "#/definitions/dataURL"
              }
            ]
          },
          "type": "array"
        },
        "name": {
          "type": "string",
          "default": "name",
          "examples": ["name"],
          "pattern": "^(.*)$"
        },
        "description": {
          "type": "string",
          "default": "note",
          "examples": ["note"],
          "pattern": "^(.*)$"
        },
        "pageSize": {
          "type": "object",
          "required": ["width", "height"],
          "properties": {
            "width": {
              "type": "integer",
              "default": 0,
              "examples": [500]
            },
            "height": {
              "type": "integer",
              "default": 0,
              "examples": [500]
            }
          }
        },
        "chartPosition": {
          "type": "object",
          "required": ["x", "y"],
          "properties": {
            "x": {
              "type": "integer",
              "default": 1,
              "examples": [1]
            },
            "y": {
              "type": "integer",
              "default": 1,
              "examples": [1]
            }
          }
        },
        "chartSize": {
          "type": "object",
          "required": ["width", "height"],
          "properties": {
            "width": {
              "type": "integer",
              "default": 200,
              "examples": [200]
            },
            "height": {
              "type": "integer",
              "default": 200,
              "examples": [200]
            }
          }
        },
        "margin": {
          "type": "object",
          "required": ["x", "y"],
          "properties": {
            "x": {
              "type": "integer",
              "default": 0,
              "examples": [0]
            },
            "y": {
              "type": "integer",
              "default": 0,
              "examples": [0]
            }
          }
        },
        "refresh": {
          "$ref": "#/definitions/AnyRefresh"
        },
        "theme": {
          "enum": [
            "default",
            "excel",
            "ggplot2",
            "quartz",
            "vox",
            "dark",
            "fivethirtyeight",
            "latimes"
          ],
          "type": "string"
        },
        "additionalProperties": false
      }
    }
  }
}
