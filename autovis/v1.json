{
  "definitions": {},
  "type": "object",
  "title": "基本参数",
  "required": ["data", "name", "pageSize", "chartPosition", "chartSize"],
  "properties": {
    "id": {
      "type": "integer",
      "default": 0,
      "examples": [0]
    },
    "data": {
      "type": "object",
      "default": { "value": "data_name" },
      "examples": [
        {
          "value": "data_name"
        }
      ]
    },
    "name": {
      "type": "string",
      "default": "name",
      "examples": ["name"],
      "pattern": "^(.*)$"
    },
    "pageSize": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": {
          "type": "integer",
          "default": 0,
          "examples": [500]
        },
        "height": {
          "type": "integer",
          "default": 0,
          "examples": [500]
        }
      }
    },
    "chartPosition": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "integer",
          "default": 1,
          "examples": [1]
        },
        "y": {
          "type": "integer",
          "default": 1,
          "examples": [1]
        }
      }
    },
    "chartSize": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": {
          "type": "integer",
          "default": 200,
          "examples": [200]
        },
        "height": {
          "type": "integer",
          "default": 200,
          "examples": [200]
        }
      }
    },
    "refresh": {
      "$ref": "#/properties/AnyRefresh"
    },
    "AnyRefresh": {
      "anyOf": [
        {
          "$ref": "#/properties/Refresh"
        },
        {
          "$ref": "#/properties/AtRefresh"
        },
        {
          "$ref": "#/properties/EveryRefresh"
        }
      ]
    },
    "Refresh": {
      "type": "string",
      "enum": ["no", "auto"]
    },
    "AtRefresh": {
      "required": ["timeUnit", "at"],
      "at": {
        "type": "string"
      },
      "timeUnit": {
        "$ref": "#/properties/TimeUnit"
      }
    },
    "EveryRefresh": {
      "required": ["timeUnit", "every"],
      "every": {
        "type": "number"
      },
      "timeUnit": {
        "$ref": "#/properties/TimeUnit"
      }
    },
    "TimeUnit": {
      "enum": [
        "year",
        "quarter",
        "month",
        "week",
        "day",
        "hour",
        "minute",
        "second",
        "millisecond"
      ],
      "type": "string"
    }
  }
}
